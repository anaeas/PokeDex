<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Cadastrar">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="Cadastrar PokÃ©mon"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextNome"
        android:hint="Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/textViewTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNome"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:text="Tipo"
        android:textColor="#555555"
        android:textSize="15sp"/>

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewTipo"/>

    <TextView
        android:id="@+id/textViewHabilidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTipo"
        android:layout_marginTop="10dp"
        android:padding="6dp"
        android:text="Habilidades"
        android:textSize="15sp"
        android:textColor="#555555" />

    <Spinner
        android:id="@+id/spinnerHabilidade1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textViewHabilidades"/>

    <Spinner
        android:id="@+id/spinnerHabilidade2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinnerHabilidade1"/>

    <Spinner
        android:id="@+id/spinnerHabilidade3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/spinnerHabilidade2"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewCam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:onClick="abrirCamera"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/cam1" />


    </RelativeLayout>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:onClick="submit"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Cadastrar"
        tools:textSize="15dp" />

    </LinearLayout>